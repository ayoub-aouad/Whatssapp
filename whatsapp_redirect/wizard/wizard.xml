<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="whatsapp_send_msg_wizard" model="ir.ui.view">
            <field name="name">whatsapp.message.wizard.form</field>
            <field name="model">whatsapp.message.wizard</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Whatsapp Message">
                    <group>
                        <field name="token"/>
                        <field name="mobile"/>
                    </group>
                    <group>
                        <field name="message"/>
                    </group>
                    <footer>
                        <button name="send_whatssapp_message" string="Send Message" type="object"/>
                        <button name="cancel" string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="whatssap_action" model="ir.actions.act_window">
            <field name="name">Send Whatssap Message</field>
            <field name="res_model">whatsapp.message.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="whatsapp_send_msg_wizard" />
            <field name="target">new</field>
        </record>
        <menuitem id="whatssap_menu"
            name="Send Whatssapp Messages"
            action="whatssap_action"
            sequence='15'/>
    </data>
</odoo>